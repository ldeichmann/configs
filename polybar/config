[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0

label-charging =  %percentage%%
label-discharging =  %percentage%%
label-full =  %percentage%%

[module/backlight]
type = internal/backlight
card = intel_backlight

label =  %percentage%%

[module/wifi]
type = internal/network
interface = wlp2s0
interval = 5.0

label-connected =   %essid% (%signal%%)
label-disconnected =   No Connection

format-connected = %{A1:bash -c "termite -e nmtui":}  <label-connected>  %{A}
format-disconnected = %{A1:bash -c "termite -e nmtui":}  <label-disconnected>  %{A}
format-disconnected-foreground = ${colors.white}
format-disconnected-background = ${colors.red}
format-disconnected-underline = ${colors.white}
