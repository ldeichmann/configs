[global/wm]
margin-top = 0
margin-bottom = -10

[colors]
white = #E1E5EA
blue = #5294E2
red = #CC575D

[bar/top]
bottom = false
override-redirect = true
width = 2460
height = 30
offset-x = 50
offset-y = 25

background = #2A303B
foreground = #B3BDCB

overline-size = 2
underline-size = 2

spacing = 1
padding-left = 4
padding-right = 4
module-margin-left = 4
module-margin-right = 4

font-0 = Roboto Condensed:size=10;2
font-1 = FontAwesome:size=10;2
font-2 = NotoSans-Regular:size=10;2
font-3 = Material Icons:size=10;2

modules-left = workspace mpris
modules-center = date
modules-right = mpd redshift volume openvpn

tray-position =
wm-restack = bspwm

[module/dmp]
type = custom/script
exec = /usr/bin/python /home/cru/Code/workspace/distributed-mediaplayer-gui/src/main.py localhost:5001
tail = true
click-left = bash -c "/usr/bin/python /home/cru/Code/workspace/distributed-mediaplayer-gui/src/main.py localhost:5001 playpause" &
click-middle = bash -c "/usr/bin/python /home/cru/Code/workspace/distributed-mediaplayer-gui/src/main.py localhost:5001 prev" &
click-right = bash -c "/usr/bin/python /home/cru/Code/workspace/distributed-mediaplayer-gui/src/main.py localhost:5001 next" &

[module/date]
type = internal/date
date = "    %a %d %b, %H:%M  "
interval = 5
format-background = ${colors.blue}
format-foreground = ${colors.white}
format-underline = ${colors.white}

[module/openvpn]
type = custom/script
exec = /home/cru/.config/polybar/modules/vpn
tail = true
click-left = bash -c "termite -e nmtui" &

[module/volume]
type = custom/script
exec = /home/cru/.config/polybar/modules/volume
tail = true

click-left = pamixer --toggle-mute &
click-middle = toggle_output
click-right = pavucontrol &
scroll-up = pamixer --increase 5 &
scroll-down = pamixer --decrease 5 &

[module/redshift]
type = custom/script
exec = /home/cru/.config/polybar/modules/redshift_panel
tail = true
click-left = pkill -x -USR1 "redshift" &

[module/mpd]
type = internal/mpd
format-online = <toggle> <label-song>
