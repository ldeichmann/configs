#!/bin/bash

##########################
### panel(s)
##########################
SEPARATOR="    "

if [ ${XDG_RUNTIME_DIR:+x} ] ; then
    TMP=$XDG_RUNTIME_DIR
else
    TMP=/tmp
fi
PANEL_TOP_FIFO=$TMP/panel-top-fifo
PANEL_BOT_FIFO=$TMP/panel-bot-fifo
PANEL_HEIGHT=30
PANEL_FONT="Roboto Condensed:size=10"
PANEL_ICONS="Material Icons:size=10"
PANEL_TOP_WM_NAME="lemonpanel_top"
PANEL_BOT_WM_NAME="lemonpanel_bottom"

export PANEL_TOP_FIFO PANEL_BOT_FIFO PANEL_HEIGHT PANEL_FONT PANEL_ICONS PANEL_TOP_WM_NAME PANEL_BOT_WM_NAME SEPARATOR


##########################
### colors
##########################

COLOR_RED="#E25852"
COLOR_WHITE="#FFFFFF"
COLOR_GREEN="#89b09c"
COLOR_PURPLE="#a8a2c0"
COLOR_GREY="#788491"
COLOR_GREY2="#2f343f"

COLOR_DEFAULT_FG=$COLOR_WHITE
COLOR_DEFAULT_BG=$COLOR_GREY2

COLOR_MONITOR_FG="#788491"
COLOR_MONITOR_BG=$COLOR_DEFAULT_BG

COLOR_FOCUSED_MONITOR_FG="#788491"
COLOR_FOCUSED_MONITOR_BG=$COLOR_DEFAULT_BG

COLOR_FREE_FG="#788491"
COLOR_FREE_BG=$COLOR_DEFAULT_BG

COLOR_OCCUPIED_FG=$COLOR_DEFAULT_FG
COLOR_OCCUPIED_BG=$COLOR_DEFAULT_BG

COLOR_FOCUSED_FG=$COLOR_DEFAULT_FG
COLOR_FOCUSED_BG=$COLOR_DEFAULT_BG

COLOR_URGENT_FG="#E25852"
COLOR_URGENT_BG=$COLOR_DEFAULT_BG

COLOR_STATE_FG="#89b09c"
COLOR_STATE_BG=$COLOR_DEFAULT_BG

COLOR_TITLE_FG="#a8a2c0"
COLOR_TITLE_BG=$COLOR_DEFAULT_BG

COLOR_SYS_FG="#E4E5E8"
COLOR_SYS_BG=$COLOR_DEFAULT_BG

COLOR_CLOCK_FG=$COLOR_DEFAULT_FG
COLOR_CLOCK_BG=$COLOR_DEFAULT_BG

COLOR_VOLUME=$COLOR_DEFAULT_FG
COLOR_VOLUME_MUTED=$COLOR_RED

PANEL_COLOR_END="%{F-}%{B-}"


##########################
### modules
##########################

BATTERY_ENABLED=0
BRIGHTNESS_ENABLED=0
REDSHIFT_ENABLED=1
DATE_ENABLED=1
MEDIAPLAYER_ENABLED=1
REDSHIFT_ENABLED=1
VOLUME_ENABLED=1
VPN_ENABLED=1
WIFI_ENABLED=0
WORKSPACE_ENABLED=1

hostname=$(uname -n)
if [[ $hostname == "bilbo" ]] ; then
    BATTERY_ENABLED=1
    BRIGHTNESS_ENABLED=1
    WIFI_ENABLED=1
fi

### battery

BATTERY_ICON_CHARGING=""
BATTERY_ICON_CRITICAL="%{F$COLOR_RED}%{B$COLOR_DEFAULT_BG}$PANEL_COLOR_END"
BATTERY_ICON=""

### brightness

BRIGHTNESS_ICON=""

### redshift

REDSHIFT_ICON_ENABLED=""
REDSHIFT_ICON_DISABLED="%{F$COLOR_RED}%{B$COLOR_DEFAULT_BG}$PANEL_COLOR_END"

### volume
VOLUME_THRESHOLD=40

ICON_VOL_LOW="$SPAN$PANEL_COLOR_END"
ICON_VOL_HIGH="$SPAN$PANEL_COLOR_END"
ICON_VOL_MUTE="$SPANRED$PANEL_COLOR_END"

### wifi
COLOR_WIFI_CONNECTED_FG=$COLOR_DEFAULT_FG
COLOR_WIFI_CONNECTED_BG=$COLOR_DEFAULT_BG

COLOR_WIFI_DISCONNECTED_FG=$COLOR_DEFAULT_FG
COLOR_WIFI_DISCONNECTED_BG=$COLOR_DEFAULT_BG

COLOR_WIFI_DISABLED_FG=$COLOR_DEFAULT_FG
COLOR_WIFI_DISABLED_BG=$COLOR_DEFAULT_BG

WIFI_CONNECTED="%{F$COLOR_WIFI_CONNECTED_FG}%{B$COLOR_WIFI_CONNECTED_BG}"
WIFI_DISCONNECTED="%{F$COLOR_WIFI_DISCONNECTED_FG}%{B$COLOR_WIFI_DISCONNECTED_BG}"
WIFI_DISABLED="%{F$COLOR_WIFI_DISABLED_FG}%{B$COLOR_WIFI_DISABLED_BG}"

WIFI_ICON_CONNECTED=""
WIFI_ICON_DISCONNECTED="%{F$COLOR_RED}%{B$COLOR_WIFI_CONNECTED_BG}$PANEL_COLOR_END"

### vpn
COLOR_VPN_CONNECTED_FG=$COLOR_DEFAULT_FG
COLOR_VPN_CONNECTED_BG=$COLOR_DEFAULT_BG

COLOR_VPN_DISCONNECTED_FG=$COLOR_DEFAULT_FG
COLOR_VPN_DISCONNECTED_BG=$COLOR_DEFAULT_BG

VPN_CONNECTED="%{F$COLOR_WIFI_CONNECTED_FG}%{B$COLOR_WIFI_CONNECTED_BG}"
VPN_DISCONNECTED="%{F$COLOR_WIFI_DISCONNECTED_FG}%{B$COLOR_WIFI_DISCONNECTED_BG}"

VPN_ICON_CONNECTED=""
VPN_ICON_DISCONNECTED="%{F$COLOR_RED}%{B$COLOR_WIFI_CONNECTED_BG}$PANEL_COLOR_END"

#workspaces
WORKSPACE_ICON_FREE="%{F$COLOR_FREE_FG}%{B$COLOR_FREE_BG}$PANEL_COLOR_END"

WORKSPACE_ICON_OCCUPIED="%{F$COLOR_OCCUPIED_FG}%{B$COLOR_OCCUPIED_BG}$PANEL_COLOR_END"

WORKSPACE_ICON_FOCUSED="%{F$COLOR_FOCUSED_FG}%{B$COLOR_FOCUSED_BG}$PANEL_COLOR_END"

WORKSPACE_ICON_URGENT="%{F$COLOR_URGENT_FG}%{B$COLOR_URGENT_BG}$PANEL_COLOR_END"

WORKSPACE_ICON_URGENT_FOCUSED="%{F$COLOR_URGENT_FG}%{B$COLOR_URGENT_BG}$PANEL_COLOR_END"
