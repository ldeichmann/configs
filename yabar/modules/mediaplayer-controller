#!/bin/bash

if [ "$#" -lt 2 ]; then
    echo "Illegal number of parameters"
    exit
fi

LIST=$(playerctl -l)
CMD="playerctl --player="

echo $LIST

for var in "$@"
do
    if [[ "$LIST" == *"$var"* ]] ; then
        CMD="$CMD$var $1"
            eval $CMD
            exit
    else
        echo "no player named $var found"
    fi
done
