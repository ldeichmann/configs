general {

        colors = true
        color_good = "#a3be8c"
        color_bad = "#bf616a"
        color_degraded = "#d08770"
        output_format = "i3bar"
        interval = 1
}

order += "nuvola"
#order += "disk /home"
order += "volume master"
#order += "cpu_usage 0"
#order += "cpu_temperature 0"
#order += "ipv6"
